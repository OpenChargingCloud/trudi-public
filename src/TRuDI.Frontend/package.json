{
  "name": "TRuDI",
  "version": "1.0.0",
  "description": "TRuDI - Transparenz- und Display-Software",
  "author": "IVU Softwareentwicklung GmbH",
  "repository": "",
  "main": "main.js",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-builder": "^19.24.1"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "trudi",
    "directories": {
      "buildResources": "../../assets",
      "output": "../../dist"
    },
    "extraResources": {
      "from": "../TRuDI.Backend/bin/dist/",
      "to": "TRuDI.Backend/bin/dist/",
      "filter": [
        "**/*"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "category": "trudi"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": false
    }
  }
}
