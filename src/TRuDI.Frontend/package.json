{
  "name": "TRuDI",
  "version": "1.0.33",
  "description": "TRuDI - Transparenz- und Display-Software für Smart Meter Gateways",
  "author": {
    "name": "IVU Softwareentwicklung GmbH",
    "email": "info@ivu-software.de"
  },
  "homepage": "http://www.ivu-software.de",
  "repository": "",
  "main": "main.js",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "electron": "1.7.9",
    "electron-builder": "^19.48.2"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
    "appId": "trudi",
    "icon": "icon",
    "directories": {
      "buildResources": "../../assets",
      "output": "../../dist"
    },
    "extraResources": {
      "from": "../TRuDI.Backend/bin/dist/",
      "to": "TRuDI.Backend/bin/dist/",
      "filter": [
        "**/*"
      ]
    },
    "linux": {
      "synopsis": "Transparenz- und Display Software für Smart Meter Gateways",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": false,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    }
  }
}
